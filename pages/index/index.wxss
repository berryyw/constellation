.page {
  min-height: 100vh;
  background: linear-gradient(180deg, #7a6cf0 0%, #9b78f2 60%, #f5f5fb 100%);
}
.container {
  padding: 16px;
}
.header {
  padding: 24px 16px 8px 16px;
  color: #fff;
}
.header .constellation {
  font-size: 20px;
  font-weight: 700;
}
.header .date {
  margin-left: 8px;
  opacity: 0.9;
}
.header .title {
  display: block;
  margin-top: 6px;
  font-size: 18px;
}
.picker-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 12px 16px;
  border-radius: 8px;
  margin-bottom: 12px;
}
.label {
  color: #666;
  font-size: 14px;
}
.picker-value {
  color: #111;
  font-size: 16px;
}
.compute {
  margin-top: 8px;
}
.result {
  margin-top: 16px;
}
.stats {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8px;
  background: rgba(255,255,255,0.85);
  border-radius: 12px;
  padding: 12px 12px;
  box-shadow: 0 6px 16px rgba(0,0,0,0.08);
}
.stat .label { color: #333; }
.stat .stars { color: #ffb300; font-size: 16px; }
.stat .value { color: #222; }
.cards {
  margin-top: 14px;
  display: flex;
  flex-direction: column;
  gap: 12px;
}
.card {
  background: #fff;
  border-radius: 12px;
  padding: 12px 14px;
  box-shadow: 0 6px 16px rgba(0,0,0,0.08);
}
.card-title {
  color: #6b5ae0;
  font-weight: 700;
  margin-bottom: 6px;
}
.card-content {
  color: #3a3a3a;
  line-height: 1.6;
}
.section {
  margin-bottom: 10px;
}
.section-title {
  color: #333;
  font-weight: 600;
}
.stars {
  color: #ffb300;
  font-size: 18px;
}
.value {
  color: #111;
}
.summary {
  color: #444;
}
