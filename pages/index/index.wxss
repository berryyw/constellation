.container {
  padding: 16px;
}
.picker-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 12px 16px;
  border-radius: 8px;
  margin-bottom: 12px;
}
.label {
  color: #666;
  font-size: 14px;
}
.picker-value {
  color: #111;
  font-size: 16px;
}
.compute {
  margin-top: 8px;
}
.result {
  margin-top: 16px;
  background: #fff;
  border-radius: 8px;
  padding: 12px 16px;
}
.section {
  margin-bottom: 10px;
}
.section-title {
  color: #333;
  font-weight: 600;
}
.stars {
  color: #ffb300;
  font-size: 18px;
}
.value {
  color: #111;
}
.summary {
  color: #444;
}
