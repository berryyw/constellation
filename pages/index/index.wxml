<view class="container">
  <view class="picker-row">
    <text class="label">选择星座</text>
    <picker mode="selector" range="{{constellations}}" value="{{constellationIndex}}" bindchange="onConstellationChange">
      <view class="picker-value">{{constellations[constellationIndex]}}</view>
    </picker>
  </view>
  <view class="picker-row">
    <text class="label">选择日期</text>
    <picker mode="date" value="{{date}}" start="1900-01-01" end="2100-12-31" bindchange="onDateChange">
      <view class="picker-value">{{date}}</view>
    </picker>
  </view>
  <button class="compute" type="primary" bindtap="onCompute">开始测算</button>
  <view wx:if="{{result}}" class="result">
    <view class="section">
      <text class="section-title">今日综述</text>
      <text class="summary">{{result.summary}}</text>
    </view>
    <view class="section">
      <text class="section-title">综合</text>
      <text class="stars">{{result.overallStars}}</text>
    </view>
    <view class="section">
      <text class="section-title">爱情</text>
      <text class="stars">{{result.loveStars}}</text>
    </view>
    <view class="section">
      <text class="section-title">事业</text>
      <text class="stars">{{result.careerStars}}</text>
    </view>
    <view class="section">
      <text class="section-title">财运</text>
      <text class="stars">{{result.wealthStars}}</text>
    </view>
    <view class="section">
      <text class="section-title">健康</text>
      <text class="stars">{{result.healthStars}}</text>
    </view>
    <view class="section">
      <text class="section-title">学业</text>
      <text class="stars">{{result.studyStars}}</text>
    </view>
    <view class="section">
      <text class="section-title">人际</text>
      <text class="stars">{{result.socialStars}}</text>
    </view>
    <view class="section">
      <text class="section-title">幸运色</text>
      <text class="value">{{result.luckyColor}}</text>
    </view>
    <view class="section">
      <text class="section-title">幸运数字</text>
      <text class="value">{{result.luckyNumber}}</text>
    </view>
    <view class="section">
      <text class="section-title">建议</text>
      <text class="summary">{{result.suggestion}}</text>
    </view>
  </view>
</view>
